@model IList<AssessmentViewModel>

<form asp-area="Teacher" asp-controller="Teacher" asp-action="ViewStudentProfile" method="POST">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="col-sm-auto">Название</th>
                <th class="col-sm-auto">Курс</th>
                <th class="col-sm-auto">Семестр</th>
                <th class="col-sm-auto">Вид контроля</th>
                <th class="col">Оценка</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td class="align-middle">
                        <input type="hidden" asp-for="@Model[i].SubjectName" readonly="@true"/>
                        @Model[i].SubjectName 
                    </td>
                    <td class="align-middle text-center">
                        <input type="hidden" asp-for="@Model[i].SubjectGrade" readonly="@true"/>
                        @Model[i].SubjectGrade
                    </td>
                    <td class="align-middle text-center">
                        <input type="hidden" asp-for="@Model[i].SubjectSemester" readonly="@true"/>
                        @Model[i].SubjectSemester
                    </td>
                    <td class="align-middle">
                        <input type="hidden" asp-for="@Model[i].ControlTypeName" readonly="@true"/>
                        @Model[i].ControlTypeName
                    </td>
                    <td class="align-middle">
                        <input type="hidden" asp-for="@Model[i].AssessmentId"/>
                        <input type="hidden" asp-for="@Model[i].StudentId"/>
                        <select class="custom-select" asp-for="@Model[i].Score"
                            asp-items="@Model[i].ScoreList"></select>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" class="btn btn-primary w-100" value="Сохранить изменения"/>
</form>