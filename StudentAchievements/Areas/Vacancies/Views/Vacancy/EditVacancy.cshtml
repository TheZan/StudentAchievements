@model EditVacancyViewModel

@{
    Layout = null;
}

<div class="modal-content">
    <form method="POST" asp-action="EditVacancy" asp-controller="Vacancy" asp-area="Vacancies">
        <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Изменение вакансии</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <input asp-for="Id" type="hidden"/>
            <div class="form-group">
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <div><span asp-validation-for="Salary" class="text-danger"></span></div>
                <label asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" />
            </div>
            <div class="form-group">
                <div><span asp-validation-for="Experience" class="text-danger"></span></div>
                <label asp-for="Experience"></label>
                <input asp-for="Experience" class="form-control" />
            </div>
            <div class="form-group">
                <div><span asp-validation-for="WorkType" class="text-danger"></span></div>
                <label asp-for="WorkType"></label>
                @Html.DropDownList("WorkType", new SelectList(new string[] { "Полный день", "Сменный график", "Гибкий график", "Удаленная работа", "Вахтовый метод" }), "Выберите тип занятости", new { @class = "custom-select" })
            </div>
            <div class="form-group">
                <div><span asp-validation-for="WorkSchedule" class="text-danger"></span></div>
                <label asp-for="WorkSchedule"></label>
                @Html.DropDownList("WorkSchedule", new SelectList(new string[] { "Полная занятость", "Частичная занятость", "Проектная работа", "Волонтерство", "Стажировка" }), "Выберите график работы", new { @class = "custom-select" })
            </div>
            <div class="form-group">
                <div><span asp-validation-for="Content" class="text-danger"></span></div>
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
            <button type="submit" class="btn btn-primary">Изменить</button>
        </div>
    </form>
</div>