@model AddDepartmentsViewModel

<div class="card">
<div class="card-header">
    Список факультетов
</div>
<div class="card-body">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th class="col-sm">Id</th>
                <th class="col-sm">Название</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model.Departments)
            {
                <tr>
                    <td class="align-middle">
                        @department.Id
                    </td>
                    <td class="align-middle">
                        @department.Name
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-warning">Изменить</a>
                    </td>
                    <td class="align-middle">
                        <form method="post">
                            <button type="submit" class="btn btn-danger">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>
<div class="card">
    <div class="card-header">
        Добавить новый факультет
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" method="post" asp-area="Admin" asp-controller="Admin" asp-action="AddDepartment">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <button class="btn btn-primary" type="submit">Добавить</button>
        </form>
    </div>
</div>