@model EditUserViewModel
@{
    Layout = "_AdminLayout";
}

<form method="post" asp-area="Admin" asp-controller="Admin" asp-action="EditUser">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <div><span asp-validation-for="Email" class="text-danger"></span></div>
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <div><span asp-validation-for="UserName" class="text-danger"></span></div>
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Отмена</a>
    <button class="btn btn-primary" type="submit">Обновить</button>
</form>