@model EditGroupViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Редактирование группы";
}

<div class="card">
    <div class="card-header">
        @Model.Name
    </div>
    <div class="card-body">
        <form method="post" asp-area="Admin" asp-controller="Admin" asp-action="EditGroup">
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <div><span asp-validation-for="Number" class="text-danger"></span></div>
                <label asp-for="Number"></label>
                <input asp-for="Number" class="form-control" />
            </div>
            <div class="form-group">
                <div><span asp-validation-for="Direction" class="text-danger"></span></div>
                <label asp-for="Direction"></label>
                <select class="custom-select" asp-for="Direction" asp-items="@Model.DirectionsList">
                    <option disabled selected>Выберите направление</option>
                </select>
            </div>
            <a asp-area="Admin" asp-controller="Admin" asp-action="AddData" class="btn btn-secondary">Отмена</a>
            <button class="btn btn-primary" type="submit">Обновить</button>
        </form>
    </div>
</div>