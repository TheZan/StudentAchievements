@model LoginViewModel
@{ Layout = "_IdentityLayout"; }

<div class="col-sm-6 mx-auto card-body">
    <h5 class="card-title">Авторизация</h5>
    <div class="text-danger" asp-validation-summary="All"></div>
    <form asp-action="Login" asp-controller="Account" asp-area="Authorization" method="post">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="form-group">
            <div><span asp-validation-for="Email" class="text-danger"></span></div>
            <input placeholder="Email" asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <div><span asp-validation-for="Password" class="text-danger"></span></div>
            <input placeholder="Пароль" asp-for="Password" class="form-control" />
        </div>
        <button class="btn btn-primary float-sm-right" type="submit">Войти</button>
        <a asp-action="Registration">Зарегистрироваться</a>
        <span>|</span>
        <a href="/">Забыли пароль?</a>
    </form>
</div>