@model LoginViewModel
@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <meta name="viewimport" content="width=device-width"/>
    <title>Авторизация</title>
    <link  rel="stylesheet" asp-href-include="/lib/twitter-bootstrap/css/bootstrap.min.css"/>
</head>
<body class="bg-light">
    <div class="container d-flex h-100">
        <div class="row align-self-center w-100">
            <div class="card col-sm-6 mx-auto">
                <div class="card-body">
                    <h5 class="card-title">Авторизация</h5>
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <form asp-action="Login" asp-controller="Account" asp-area="Authorization" method="post">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group">
                            <div><span asp-validation-for="Email" class="text-danger"></span></div>
                            <input placeholder="Email" asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <div><span asp-validation-for="Password" class="text-danger"></span></div>
                            <input placeholder="Пароль" asp-for="Password" class="form-control" />
                        </div>
                        <button class="btn btn-primary float-sm-right" type="submit">Войти</button>
                        <a href="/">Зарегистрироваться</a>
                        <span>|</span>
                        <a href="/">Забыли пароль?</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>